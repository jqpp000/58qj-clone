<% 
  const pageContent = `
    <div class="admin-header">
      <h1>添加新广告位置</h1>
      <a href="/admin/ad-positions" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i> 返回列表
      </a>
    </div>

    <div class="admin-form-container">
      <form method="POST" action="/admin/ad-positions/add" class="admin-form">
        <div class="form-group">
          <label for="name">位置名称 <span class="required">*</span></label>
          <input type="text" id="name" name="name" class="form-control" 
                 placeholder="例如：置顶广告、右侧横幅" required>
        </div>

        <div class="form-group">
          <label for="key">位置标识 <span class="required">*</span></label>
          <input type="text" id="key" name="key" class="form-control" 
                 placeholder="例如：top-banner、right-ad" required>
          <small>只能包含字母、数字和横线，用于代码识别</small>
        </div>

        <fieldset>
          <legend>样式设置（可选）</legend>
          
          <div class="form-group">
            <label for="backgroundColor">背景色</label>
            <input type="text" id="backgroundColor" name="backgroundColor" 
                   class="form-control" value="#fff8dc" placeholder="例如：#fff8dc">
          </div>
          
          <div class="form-group">
            <label for="borderColor">边框色</label>
            <input type="text" id="borderColor" name="borderColor" 
                   class="form-control" value="#ffd700" placeholder="例如：#ffd700">
          </div>
          
          <div class="form-group">
            <label for="titleColor">标题文字色</label>
            <input type="text" id="titleColor" name="titleColor" 
                   class="form-control" value="#8b4513" placeholder="例如：#8b4513">
          </div>
          
          <div class="form-group">
            <label for="titleBgColor">标题背景色</label>
            <input type="text" id="titleBgColor" name="titleBgColor" 
                   class="form-control" value="#ffd700" placeholder="例如：#ffd700">
          </div>
        </fieldset>

        <div class="form-group">
          <label for="sort">排序权重</label>
          <input type="number" id="sort" name="sort" class="form-control" value="0" min="0">
          <small>数字越大，位置越靠前</small>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-success">保存位置</button>
          <a href="/admin/ad-positions" class="btn btn-secondary">取消</a>
        </div>
      </form>
    </div>
  `;
%>

<!-- 引入后台布局 -->
<%- include('../layouts/admin-main', { 
  title: '添加广告位置 - 58信息网后台',
  content: pageContent
}) %>
